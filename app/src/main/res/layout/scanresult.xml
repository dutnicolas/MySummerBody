<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightGrey"
    tools:context=".ScanResult">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/fleche"
        android:src="@drawable/fleche"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food Tracker"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="30dp"
        android:gravity="center"
        android:background="#EB46A14A"
        android:padding="10dp"/>
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/button_returnHome"
        android:text="Return to Menu Page"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/test"
        />
    <Button
        android:layout_marginTop="0dp"
        android:id="@+id/capture_button"
        android:text="Scan"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/test"
        />
    <ImageView
        android:layout_marginTop="15dp"
        android:id="@+id/food_image_view"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/food_name_text_view"
        android:text="test"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/black"/>
</LinearLayout>